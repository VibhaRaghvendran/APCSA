
public class Testing {
	String answer = "ABCF";
	String guess;
	Scanner scan = new Scanner (System.in);
	char[] origLetters;
	
	public Testing () {
		origLetters = answer.toCharArray();
	}

	public char[] getGuess () {
		System.out.println ("What is your guess?");
		String guess = scan.nextLine();
		
		char[] guessLetters = guess.toCharArray();
		
		return guessLetters;
	}

	public int totalLetterTally () {
		char[] guessLetters = getGuess();
		int count = 0;
		
		for (int i = 0; i < guess.length(); i++) {
			for (int j = 0; j < answer.length(); j++) {
				if (guessLetters[i] == origLetters[j]) {
					count++;
				}
			}
		}
		
		return count;
	}
	
	public int exactLetterTally () {
		char[] guessLetters = getGuess();
		int count = 0;
		
		for (int i = 0; i < answer.length(); i++) {
			if (origLetters[i] == guessLetters[i]) {
				count++;
			}
		}
		
		return count;
	}
	
	public void printInfo () {
		System.out.println("Correct position: " + 
	}

	public static void main (String[] args) {
		Testing test = new Testing();
	}
}
